<Page x:Class="Bei_Daniel.RestaurantOverviews"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bei_Daniel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RestaurantOverviews"
      Background="#F8F9FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Filter -->
        <Border Grid.Row="0" Background="White" Padding="30,20,30,20" BorderThickness="0,0,0,1" BorderBrush="#E8ECEF">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Restaurants" 
                           FontSize="28" 
                           FontWeight="SemiBold"
                           Foreground="#1A1F36"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Kategorie:" 
                               FontSize="13" 
                               FontWeight="SemiBold"
                               Foreground="#5A6B7D"
                               Margin="0,0,10,0"
                               VerticalAlignment="Center"/>
                    <ComboBox Width="180"
          Height="36"
          ItemsSource="{Binding AvailableTypes}"
          SelectedItem="{Binding SelectedType, Mode=TwoWay}"
          IsEditable="False" 
          Padding="12,0,12,0"
          FontSize="13"
          Foreground="#1A1F36"
          VerticalContentAlignment="Center">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="#3366FF"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="Foreground" Value="#1A1F36"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="Padding" Value="12,8,12,8"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#EBF4FF"/>
                                        <Setter Property="BorderBrush" Value="#3366FF"/>
                                    </Trigger>
                                    <Trigger Property="IsKeyboardFocused" Value="True">
                                        <Setter Property="Background" Value="#EBF4FF"/>
                                        <Setter Property="BorderBrush" Value="#0055DD"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Restaurants List -->
        <Border Grid.Row="1" Background="#F8F9FA" Padding="30,20,30,20">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding Restaurants}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:RestaurantCard Restaurant="{Binding}" 
                                                  NavigateCommand="{Binding DataContext.NavigateToItemsCommand, RelativeSource={RelativeSource AncestorType=Page}}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>