<Page x:Class="Bei_Daniel.RestaurantOverviews"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bei_Daniel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RestaurantOverviews">

    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Restaurants}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:RestaurantCard Padding="5,0,0,5"  Restaurant="{Binding}" 
                     NavigateCommand="{Binding DataContext.NavigateToItemsCommand, RelativeSource={RelativeSource AncestorType=Page}}"/>
                       
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <ComboBox Grid.Column="4" 
            ItemsSource="{Binding AvailableTypes}"
              SelectedItem="{Binding SelectedType, Mode=TwoWay}"
           IsEditable="False" VerticalContentAlignment="Center" Margin="0,10,10,0"
             >
                
            </ComboBox>

        </Grid>
    </Grid>
</Page>
