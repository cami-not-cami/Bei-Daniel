<Window x:Class="Bei_Daniel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bei_Daniel"
        mc:Ignorable="d"
        Title="Bei Daniel"
        Height="800"
        Width="1200"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow"
        Icon="/Helpers/Icons/BeiDanielLogo.png"
        AllowsTransparency="False"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="MenuItemStyle" TargetType="MenuItem">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,14,16,14"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <TextBlock Text="{TemplateBinding Header}" 
                                       Foreground="{TemplateBinding Foreground}"
                                       FontSize="{TemplateBinding FontSize}"
                                       FontWeight="{TemplateBinding FontWeight}"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1F4D7F"/>
                                <Setter Property="Foreground" Value="#4DB8FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0A2A4F"/>
                                <Setter Property="Foreground" Value="#66D9FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#F8F9FA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar with Gradient -->
        <Border Grid.Column="0" Background="#0D1B2A" BorderThickness="0,0,1,0" BorderBrush="#0A2A4F">
            <StackPanel Orientation="Vertical">

                <!-- Logo/Branding Section with Accent -->
                <Border Padding="20,30,20,30" BorderThickness="0,0,0,2" BorderBrush="#D61734">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                        <TextBlock Text="Bei Daniel" 
                                   Foreground="#66D9FF"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   Margin="0,0,0,6"/>
                        <TextBlock Text="🍎 Obst und Gemüse" 
                                   Foreground="#A0BFFF"
                                   FontSize="12"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Menu -->
                <StackPanel Orientation="Vertical" Margin="0,30,0,0">
                    <MenuItem Header="🏠 Home"
                              Style="{StaticResource MenuItemStyle}"
                              Click="MenuItem_Click"/>

                    <MenuItem Header="⚙ Einstellungen"
                              Style="{StaticResource MenuItemStyle}"
                              Click="MenuItem_Click_1"/>
                    <MenuItem Header="🛒 Restaurant Manager"
                              Style="{StaticResource MenuItemStyle}"
                              Click="MenuItem_Click_2"/>    
                </StackPanel>   

                <!-- Bottom accent bar -->
                <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,30">
                    <Rectangle Height="3" Fill="#D61734" Margin="20,0,20,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content Area with subtle gradient background -->
        <Border Grid.Column="1" Background="#F8F9FA">
            <Frame Name="MainFrame" 
                   Visibility="Visible" 
                   NavigationUIVisibility="Hidden"/>
        </Border>
    </Grid>
</Window>