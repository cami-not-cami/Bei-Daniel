<Window x:Class="Bei_Daniel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:local="clr-namespace:Bei_Daniel"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="800"
        Width="1200"
        WindowStyle="SingleBorderWindow"
AllowsTransparency="False"
            
        WindowStartupLocation="CenterScreen">

    <!--// Background Grid //-->

    <Grid Background="#23262B" ShowGridLines="True">

        

        <!--// Menu Panel //-->

        <StackPanel Background="#2E333A"
                    Width="230"
                    Orientation="Vertical"
                    HorizontalAlignment="Left">

            <!--// Channel Name //-->

            <Grid Height="50"
                  VerticalAlignment="Top"
                  Margin="0,30,0,0">

                <Border Background="#D61734"
                        Height="25"
                        CornerRadius="3,0,0,3"
                        Width="6"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right" />

                <TextBlock Text="Obst und Gemüse Bei Daniel"
                           Foreground="#FFFFFF"
                           FontFamily="Fonts/#Orbitron Medium"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center" />

            </Grid>

            <!--// Main Menu //-->

            <Menu Height="450"
                  Background="Transparent"
                  Margin="0,40,0,0">

                <Menu.ItemsPanel>

                    <ItemsPanelTemplate>

                        <VirtualizingStackPanel Orientation="Vertical" />

                    </ItemsPanelTemplate>

                </Menu.ItemsPanel>

                <!--// Main Menu - Home //-->

                <MenuItem Header="Home"
                          Template="{StaticResource Menu_Template}">

                    <!--<MenuItem.Icon>

                            <Image Source="Assets/img_home.png"
                               Stretch="None" />

                        </MenuItem.Icon>-->

                </MenuItem>

                <!--// Main Menu - History //-->

                <MenuItem Header="History"
                          Template="{StaticResource Menu_Template}">

                    <!--<MenuItem.Icon>

                            <Image Source="Assets/img_history.png"
                               Stretch="None" />

                        </MenuItem.Icon>-->

                </MenuItem>

                <!--// Main Menu - Settings //-->

                <MenuItem Header="Settings"
                          Template="{StaticResource Menu_SubMenu_Template}">

                    <!--<MenuItem.Icon>

                            <Image Source="Assets/img_setting.png"
                               Stretch="None" />

                        </MenuItem.Icon>-->


                </MenuItem>
            </Menu>

        </StackPanel>
        <Frame Name="MainFrame" Visibility="Visible" Grid.Row="1" Grid.Column="1" Margin="235,0,-3,0"/>


    </Grid>

</Window>