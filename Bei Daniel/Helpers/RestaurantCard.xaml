<UserControl x:Class="Bei_Daniel.RestaurantCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bei_Daniel"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="600">

    <Border Background="WhiteSmoke" CornerRadius="20" Padding="10" SnapsToDevicePixels="True">
        <Border.InputBindings>
            <!-- Left mouse click anywhere on the card -->
            <MouseBinding Gesture="LeftClick"
                          Command="{Binding NavigateCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                          CommandParameter="{Binding Restaurant, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
        </Border.InputBindings>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Restaurant Name + Address -->
            <StackPanel Grid.Column="0" Grid.Row="0" Grid.RowSpan="2">
                <TextBlock Text="{Binding Name}" 
                           FontSize="16" 
                           FontWeight="Bold"/>
                <TextBlock Text="{Binding Address}" 
                           FontSize="14" 
                           Foreground="Gray"/>
            </StackPanel>

            <!-- Arrow Button (kept for visual, still works if clicked) -->
            <Button Grid.Column="2" Grid.Row="0" Grid.RowSpan="2"
                    Content="▶" 
                    Background="{x:Null}" 
                    BorderBrush="{x:Null}"
                    FontSize="28" 
                    Command="{Binding NavigateCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    CommandParameter="{Binding Restaurant, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                    VerticalAlignment="Center"/>
        </Grid>
    </Border>
</UserControl>